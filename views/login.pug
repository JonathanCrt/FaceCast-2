extends layout

block content
    section#sidebar
        div(class="inner")
            if user
                nav
                    ul
                        li
                            a(href="/") Home
                        li
                            a(href="/offre") List of offers
                        li
                            a(href="/extra") List of extras
                        li
                            a(href="/candidacy") List of candidacy
    div#wrapper
        section#intro(class="wrapper style1 fullscreen fade-up")
            div(class="inner")
                h2.alt Login           
                form(action="/login", method="post")
                    div.row              
                        div(class='6u 12u$(mobile)')                
                            input(type='text', name="username", placeholder='Login')              
                        div(class='6u$ 12u$(mobile)')               
                            input(type='password', name="password", placeholder='Mot de passe')                                  
                        div(class='12u$')      
                            br           
                            input(type='submit' class="button special" value="Validate")             
                        div(class='12u$')    
                            br  
                            
                            a(href='/register' class="button scrolly") Register
